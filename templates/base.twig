{% set content_classes = [
	'layout-content',
	sidebar ? 'sidebar-width': 'full-width',
] %}

{% block html_head_container %}

	{% include 'html-header.twig' %}
	{% block head %}
	{% endblock %}
	</head>
{% endblock %}

<body class="{{ body_class }}" data-template="base.twig">
<a class="skip-link screen-reader-text" href="#content">{{ _e( 'Skip to content') }}</a>
<header class="header">
	{% block header %}
		<div class="wrapper">
			<h1 class="hdr-logo" role="banner">
				<a class="hdr-logo-link" href="{{ site.url }}" rel="home">{{ site.name }}</a>
			</h1>
			<div id="mobile-nav-toggle" class="mobile-nav-toggle">
				<div id="top" class="bar top"></div>
				<div id="middle" class="bar middle"></div>
				<div id="bottom" class="bar bottom"></div>
			</div>
			<nav id="nav-main" class="nav-main" role="navigation">
				{% include "menu.twig" with {'items': menu.get_items} %}
			</nav><!-- #nav -->
		</div>
	{% endblock %}
</header>

<section id="content" role="main" class="main-content">
	{% if title %}<h1>{{ title }}</h1>{% endif %}
	<div class="main-content-wrapper">
		<div class="{{ content_classes|join(' ') }}">
			{% block content %}
				Sorry, no content
			{% endblock %}
		</div>
		{% if sidebar %}
			<aside class="layout-sidebar">
				{% include 'sidebar.twig' %}
			</aside>
		{% endif %}
	</div>
</section>

{% block footer %}
	<footer id="footer" class="site-footer">
		<div class="site-footer__inner_container">
			{% include 'footer.twig' %}
		</div>
	</footer>
	{{ function('wp_footer') }}
{% endblock %}
</body>
</html>
